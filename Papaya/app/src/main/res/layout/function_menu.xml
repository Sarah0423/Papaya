<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- 側邊選單 -->

    <LinearLayout
        android:layout_width="286dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.042">

        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:orientation="horizontal"
            android:translationX="25dp"
            android:layout_marginTop="14dp">

            <FrameLayout
                android:layout_width="67dp"
                android:layout_height="67dp">

                <ImageView
                    android:id="@+id/iv_user_img"
                    android:layout_width="67dp"
                    android:layout_height="67dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/login_usagi" />

                <ImageView
                    android:id="@+id/iv_cut_user_img"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/cut_user_img" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="13dp"
                android:text="尚未登入"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_update_to_pro"
            android:layout_width="224dp"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:translationX="25dp"
            android:layout_marginTop="28dp">

            <ImageView
                android:id="@+id/iv_pro_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/crown" />

            <TextView
                android:id="@+id/tv_pro"
                android:layout_width="176dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:text="成為Pro會員，免外送費，月月領優惠"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn_login_register"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <Button
                android:id="@+id/btn_signin_function_menu"
                android:layout_width="83dp"
                android:layout_height="48dp"
                android:text="登入"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_register_function_menu"
                android:layout_width="83dp"
                android:layout_height="48dp"
                android:layout_marginStart="54dp"
                android:text="註冊"
                android:textAlignment="center"
                android:textSize="24dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/points_layout"
            android:layout_width="224dp"
            android:layout_height="27dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="65dp"
                android:layout_height="21dp"
                android:text="帳戶餘額"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_pointBalance"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#FFA941"
                android:padding="8dp"
                android:text="1000.00 P"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="224dp"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"/>

        <LinearLayout
            android:id="@+id/order_layout"
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_order"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/order" />

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="我的訂單"
                android:textAlignment="center"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/daily_spin_layout"
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_daily_spin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_daily_spin"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="每日轉盤"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/delivery_layout"
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_delivery"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/delivery" />

            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="外送進度"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/customer_service_layout"
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_customer_service"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/customer_service" />

            <TextView
                android:id="@+id/tv_customer_service"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="客服中心"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/branch_layout"
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_branch_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/branch_info" />

            <TextView
                android:id="@+id/tv_branch_info"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="分店資訊"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout_layout"
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="60dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_signout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_signout"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="登出"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_favorite_layout"
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/favorite" />

            <TextView
                android:id="@+id/tv_favorite"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="我的收藏"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
