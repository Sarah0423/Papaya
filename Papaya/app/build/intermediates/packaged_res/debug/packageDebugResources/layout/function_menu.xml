<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="286dp"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">


        <LinearLayout
            android:id="@+id/ll_user_info"
            android:layout_width="144dp"
            android:layout_height="67dp"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@mipmap/user_usagi" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="64dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="13dp"
                android:text="Usagi"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_update_to_pro"
            android:layout_width="224dp"
            android:layout_height="52dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/crown" />

            <TextView
                android:id="@+id/promoText"
                android:layout_width="176dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:text="成為Pro會員，免外送費，月月領優惠"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="224dp"
            android:layout_height="27dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="65dp"
                android:layout_height="21dp"
                android:text="帳戶餘額"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/pointBalance"
                android:layout_width="98dp"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFA941"
                android:padding="8dp"
                android:text="1000.00 P"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="224dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginVertical="12dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_order"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="我的訂單"
                android:textAlignment="center"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_daily_spin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_daily_spin"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="每日轉盤"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/idelivery"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_delivery"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="外送進度"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_customer_service"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_customer_service"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="客服中心"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_branch_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_branch_info"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="分店資訊"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_signout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_signout"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="登出"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:translationX="25dp">

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:textAlignment="center"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/tv_favorite"
                android:layout_width="65dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:text="我的收藏"
                android:textAlignment="center"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
